{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["support/pages/*"],
      "@fixtures/*": ["support/fixtures/*"],
      "@config/*": ["config/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["support/**/*.js", "tests/**/*.js"]
}
